// Submeshcafe vertex

typedef struct
{
    Vec4 x1 <bgcolor=CL_VBFLOAT>;
    Vec4 x2 <bgcolor=CL_VBFLOAT>;
    Vec4 x3 <bgcolor=CL_VBFLOAT>;
    float u <bgcolor=CL_VBFLOAT>;
    float v <bgcolor=CL_VBFLOAT>;

    local float pos[3];
    local float norm[3];

    pos[0] = x1.values[0];
    pos[1] = x2.values[0];
    pos[2] = x3.values[0];

    norm[0] = x1.values[1];
    norm[1] = x2.values[1];
    norm[2] = x3.values[1];
} Vertex;